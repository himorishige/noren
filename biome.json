{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*.ts",
      "**/*.js",
      "**/*.mjs",
      "**/*.tsx",
      "**/*.jsx",
      "**/*.json",
      "!**/dist",
      "!**/dist-test",
      "!**/coverage",
      "!**/node_modules"
    ]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "overrides": [
    {
      "includes": ["**/dist", "**/dist-test", "**/coverage"],
      "formatter": {
        "enabled": false
      },
      "linter": {
        "enabled": false
      }
    }
  ]
}
