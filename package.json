{
  "name": "noren",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "build": "pnpm -r --filter './packages/**' run --if-present build",
    "typecheck": "pnpm -r --filter './packages/**' run --if-present typecheck",
    "test": "pnpm -r --filter './packages/**' run --if-present test",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4"
  }
}
