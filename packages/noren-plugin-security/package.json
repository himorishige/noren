{
  "name": "@himorishige/noren-plugin-security",
  "version": "0.1.0",
  "description": "Security-focused plugin for Noren (JWT tokens, API keys, HTTP headers, cookies)",
  "keywords": [
    "pii",
    "privacy",
    "redaction",
    "security",
    "jwt",
    "api-key",
    "http-headers",
    "cookies",
    "noren-plugin"
  ],
  "homepage": "https://github.com/himorishige/noren#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/himorishige/noren.git",
    "directory": "packages/noren-plugin-security"
  },
  "bugs": {
    "url": "https://github.com/himorishige/noren/issues"
  },
  "author": "himorishige",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20.10.0"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true});require('fs').rmSync('dist-test',{recursive:true,force:true})\"",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepublishOnly": "pnpm run build",
    "pretest": "pnpm run build && tsc -p tsconfig.test.json",
    "test": "node --test dist-test/test/**/*.test.js"
  },
  "dependencies": {
    "@himorishige/noren-core": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.6.2",
    "@types/node": "^20"
  }
}
